NAME = cub3D
CC = gcc
FLAGS = -Wall -Wextra #-Werror
LIB = -L mlx_linux/ -L get_next_line/ -L libft/
OPTION_LIB = -lmlx -lXext -lX11 -lm -lbsd -lft -lgnl
OPTION = -O3 -c -g
LIBFT = make -C libft
GNLIB = make -C get_next_line
SRCS =	cub3d.c\
		check_file_save_map.c\
		init_file.c\
		control.c\
		utils.c\
		utils_for_map.c\
		cheats_42.c\
		utils_2.c \
		init_struct_all.c \
		create_bmp.c \
		sprite.c \
		put_3d.c \
		reycast.c

OBJS_SRCS = ${SRCS:.c=.o}

all: $(NAME)

$(NAME) : $(OBJS_SRCS)
		@$(CC) $(FLAGS) $(OPTION) $(SRCS)
		@$(LIBFT)
		@$(GNLIB)
		@$(CC) $(OBJS_SRCS) -o $(NAME) $(LIB) $(OPTION_LIB)
clean:
		rm -f $(OBJS_SRCS)
		@$(LIBFT) clean
		@$(GNLIB) clean
fclean: clean
		rm -f $(NAME)
		@$(LIBFT) fclean
		@$(GNLIB) fclean
re: fclean all
.PHONY: all clean fclean re
