NAME = cub3d
CC = gcc
FLAGS = -Wall -Wextra #-Werror
#LIB = libmlx.dylib
LIB = -L mlx_mac -L get_next_line -L libft
OPTION_LIB = -framework Metal -framework AppKit -lgnl -lft
OPTION = -c
LIBFT = make -C libft
GNLIB = make -C get_next_line
SRCS =	cub3d.c\
		check_file_save_map.c\
		init_file.c

OBJS_SRCS = ${SRCS:.c=.o}

all: $(NAME)

$(NAME) : $(OBJS_SRCS)
		@$(CC) $(FLAGS) $(OPTION) $(SRCS)
		#@$(LIBFT)
		#@$(GNLIB)
		@$(CC) $(LIB) $(OPTION_LIB) $(OBJS_SRCS) -o $(NAME)
clean:
		rm -f $(OBJS_SRCS)
		#@$(LIBFT) clean
		#@$(GNLIB) clean
fclean: clean
		rm -f $(NAME)
		rm -f $(LIB)
		#@$(LIBFT) fclean
		#@$(GNLIB) fclean
re: fclean all
.PHONY: all clean fclean re
